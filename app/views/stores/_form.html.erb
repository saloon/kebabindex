<% if notice.present? %> <p class="alert alert-success"><%= notice %></p><%end%>

<%= form_for @store do |f| %>
  <% if @store.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</strong>

      <ul>
      <% @store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :address, "Adresse" %><br>
    <%= f.text_field :address, :class => 'form-control', :placeholder => 'Straße, Ort' %>
  </div>
  <div class="form-group clearfix">
    <%= link_to 'Zurück', root_path, :class => 'btn btn-default pull-left' %> 
    <%= f.submit "Eintragen", :class => 'btn btn-primary pull-right ' %>
  </div>

<% end %>
