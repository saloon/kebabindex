<div class="page-header">
  <h1>
    Listing stores
    <%= link_to 'New Store', new_admin_store_path, class: "btn btn-default pull-right" %>
  </h1>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
    <tr>
      <td>
        <%= store.name %>
        <% if store.approved? %>
          <span class="label label-success">Approved</span>
        <% else %>
          <span class="label label-danger">Not Approved</span>
        <% end %>
      </td>
      <td><%= store.address %></td>
      <td><%= store.latitude %></td>
      <td><%= store.longitude %></td>
      <td>
        <%= link_to 'Show', admin_store_path(store), class: "btn btn-primary" %>
        <%= link_to 'Destroy', admin_store_path(store), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
Total: <%= @stores.count %>